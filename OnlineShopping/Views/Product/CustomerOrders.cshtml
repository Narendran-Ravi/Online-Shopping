@model IEnumerable<OnlineShopping.DomainModel.BuyRequest>
    @{
        ViewBag.Title = "Customer Orders";
        Layout = "~/Views/Shared/_Admin.cshtml";
    }

<div>

<div style="text-align:center">
<span class="alert-success">
    @TempData["BuyerEmail"]
    <br/>
</span>
    </div>
</div>
    <table class="table table-hover">
        <tr>
            <th>Request Id</th>

            <th>Product Id</th>

            <th>User email</th>

            <th></th>
            


        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RequestId</td>

                <td>@item.ProductId</td>
                <td>@item.Email</td>


                <td>
                    <a href="@Url.Action("CustomerDetails",new { email=item.Email})" class="btn btn-success">View Customer Details</a>
                    <a href="@Url.Action("BuildEmailTemplate","Email",new {id=item.RequestId})" class=" btn btn-primary">Send Confirmation Mail</a>
                    <a href="@Url.Action("CompletedOrder",new{ id=item.RequestId })" class="btn btn-danger">Completed Order</a>

                </td>
            </tr>
        }
    </table>

